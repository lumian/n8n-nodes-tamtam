{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2019",
    "lib": ["es2019", "es2020", "es2022.error"],
    "removeComments": true,
    "useUnknownInCatchVariables": false,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "rootDir": ".",
    "outDir": "./dist/",
    "incremental": true
  },
  "include": [
    "credentials/**/*",
    "nodes/**/*",
    "*.ts"
  ],
  "exclude": [
    "dist/**/*",
    "node_modules/**/*",
    "**/*.spec.ts"
  ]
}